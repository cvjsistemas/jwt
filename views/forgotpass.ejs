<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap CSS -->
    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/styles.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <style>
    body {  
      /* display: flex; */
      align-items: center;
      padding-top: 40px;
      padding-bottom: 40px;
      background-color:rgba(255,255,255,0.95);
      margin:0px auto;
      width:480px;
    }

      .card {
          margin: 0 auto; /* Added */
            float: none; /* Added */
            margin-bottom: 10px; /* Added */
            width:450px;
            
    }


    .home{
      width:450px;
      margin: 0px auto;
      /*border:1px solid;*/
    }

    .linkhome{
      text-align: center; 
      width:450px;
      margin: 0px auto;
      text-decoration: none; /* Added */
    }

    </style>
    <title>Forgot Pass</title>
  </head>
  <body>

<div class="container">
    <div class="row">
        <div class="col-lg-12 shadow-lg p-3 mb-5">

          <div class="card border-primary">
            <div class="card-header bg-primary text-white">Olvide Password</div>
            <div class="card-body text-primary">
              <form action="/forgotpass" method="post">        
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input id="email" name="email" type="email" class="form-control" required>              
                </div>
                                     
            </div>
            <div class="card-footer bg-transparent border-primary">
              <div class="d-grid gap-2 col-12 mx-auto">
              <a href="/login" type="button" class="btn btn-secondary">Cancelar</a>
              <button type="submit" class="btn btn-primary">Enviar</button>
              </div>
            </div>
            </form>
          </div>   
    
        </div>
    </div>
   

      <div class="home">
        <a href="/login" type="button" class="linkhome"><i class="bi bi-house-door"></i> Home</a>
      </div>
  
      
  
</div>

<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<% switch (alert) { 
  
  case 'null' : %>
  <script>
    Swal.fire({
      title: '<%= alertTitle %>',
      text:'<%= alertMessage %>',
      icon:'<%= alertIcon %>',
      showConfirmButton: <%= showConfirmButton %>,
      timer: <%= timer %>
    }).then(()=>{
      window.location = '/<%= ruta %>'
    })
  </script>
  <% break;

  case 'failed' : %>
  <script>
    Swal.fire({
      title: '<%= alertTitle %>',
      text:'<%= alertMessage %>',
      icon:'<%= alertIcon %>',
      showConfirmButton: <%= showConfirmButton %>,
      timer: <%= timer %>
    }).then(()=>{
      window.location = '/<%= ruta %>'
    });
  </script>
    <% break;

    case 'enviado' : %>
    <script>
      Swal.fire({
      title: '<%= alertTitle %>',
      text:'<%= alertMessage %>',
      icon:'<%= alertIcon %>',
      showConfirmButton: <%= showConfirmButton %>,
      timer: <%= timer %>
      }).then(()=>{
      window.location = '/login'
    });
    </script>
     <% break;

     case '2' : %>


     <% break;
 
    } %>

    
    <!--<script src="js/bootstrap.bundle.min.js"></script>-->
  </body>
</html>